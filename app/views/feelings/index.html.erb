
<div class="container">
  <div class="row">

    <% @feelings.each do |feeling| %>
      <div class=" col-lg-4 col-md-6 col-sm-12 col-xs-12 mt-3">
        <div class="card-product">
          <% if feeling.photo.key %>
            <%= cl_image_tag feeling.photo.key %>
          <% end %>
          <div class="card-cont">
            <div class="card-product-infos">
              <div class="card_info">
                <h2><%= feeling.name %></h2>
                <p><strong><%= feeling.percentage %>%</strong></p>
                <% if feeling.user == current_user %>
                <span class="badge rounded-pill text-bg-info">My feelings</span>
                <% end %>
              </div>
              <button class="btn">
                <%= link_to "Details", feeling_path(feeling), class: "btn btn-primary stretched-link" %>
              </button>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
