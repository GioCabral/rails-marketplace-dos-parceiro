

  <div class="container">
    <div class="ns mt-5 mb-5 ">  <h1 class="ns ml-3 ">My Feelings</h1></div>
    <div class="row">
      <% @feelings.each do |feeling| %>
        <div class="col-4 mt-3">
          <div class="card-product">
          <% if feeling.photo.key %>
            <%= cl_image_tag feeling.photo.key, height: 300, width: 400, crop: :fill %>
          <% end %>
          <div class="card-cont">
            <div class="card-product-infos">
              <div class="card_info">
                <h2><%= feeling.name %></h2>
                <p><strong><%= feeling.percentage %>%</strong></p>
                <% if feeling.user == current_user %>
                <span class="badge rounded-pill text-bg-info">My feelings</span>
                <% end %>
              </div>
                <div class="card_btn">
                <p><%= link_to "Details", feeling_path(feeling) %></p>
                </div>
            </div>
            </div>
          </div>
        </div>
      <% end %>

    </div>


</div>
<div class="btn_back">
    <%= link_to "Add more feelings", feelings_path, class: "btn btn-primary" %>
  </div>
